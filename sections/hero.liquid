{% assign color_scheme = settings.color_schemes | first %}

<div class="relative flex items-center justify-center bg-[url('{{ section.settings.hero_banner | img_url: 'master' }}')] bg-center bg-cover pb-[100px]">
  <div class="px-10 mx-auto flex justify-center items-center">
    <div class="max-w-[370px] text-[{{ color_scheme.settings.text-secondary }}] font-poppins">
      <h1 class="text-[50px] font-barlow font-bold leading-[60px] mb-6">{{ section.settings.title | capitalize }}</h1>
      {{ section.settings.subtitle }}
      <button class="{{ section.settings.button_type }} mt-10">{{ section.settings.button_label |  link_to: section.settings.button_url  }}</button>
    </div>
    <div>
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}" width="" height="" class="w-full h-full object-cover">
      {% else %}
        {{ 'product-2' | placeholder_svg_tag: 'w-full h-full object-cover' }}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title of Hero",
      "default": "Choose your shoes with us."
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle of Hero",
      "default": "<p>We will help you to choose the product that without the doubt suits you best. And we mean it</p>"
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Choose button",
      "options": [
          {
            "value": "primary-btn",
            "label": "Primary Button"
          },
          {
            "value": "secondary-btn",
            "label": "Secondary Button"
          }
      ]
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Read More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "hero_banner",
      "label": "Hero banner"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
    ]
}
{% endschema %}