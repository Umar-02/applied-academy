{% assign color_scheme = settings.color_schemes | first %}

<div class="bg-[{{ color_scheme.settings.background }}] pt-[100px] mb-[100px] bg-[url('{{ 'Rectangle_bg_top.png' | file_url }}')] bg-cover bg-no-repeat">
  <div class="mx-auto px-10">
    <div class="text-[{{ color_scheme.settings.button }}] text-[15px] mb-[30px]">
      <h2 class="text-[34px] font-barlow font-bold leading-10 mb-2 text-[{{ color_scheme.settings.danger }}]">{{ section.settings.title }}</h2>
      {{ section.settings.subtitle }}
    </div>
    <div class="grid grid-cols-3">
        {% for block in section.settings.blocks %}
          <a href="{{ routes.collections_url }}" class="relative w-full h-[430px] p-[30px] flex justify-end text-end bg-cover {% if block.settings.image != blank %} bg-[url('{{ block.settings.image | img_url: 'master' }}')] {% else %}  {% endif %}">
            <div>
              <h3 class="text-[{{ color_scheme.settings.danger }}] text-4xl">{{ block.title }}</h3>
            </div>
          </a>
        {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "categories",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop by categories"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Pick a category you need</p>"
    }
    ],
    "max_blocks": 3,
    "blocks": [
      {
        "name": "Collection",
        "type": "collection",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Collection Card's background"
          }
        ]
      }
    ]
}
{% endschema %}