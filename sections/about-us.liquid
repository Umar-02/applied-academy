{% assign color_scheme = settings.color_schemes | first %}

<div class="section-padding relative">
  <div class="relative z-20 mx-auto px-10 grid grid-cols-2">
    <div class="w-full h-full max-h-[420px] overflow-hidden ">  
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="" class="object-cover h-full" width="100%" height="100%">
      {% else %}
        {{ 'product-2' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-200' }}
      {% endif %}
    </div>
    <div class="w-full h-full px-[30px] py-[60px] order-{% if section.settings.image_position == 'left' %}last{% else %}first{% endif %} bg-[#F6F6F6] flex flex-col text-[#626262] font-poppins leading-6 items-{% if section.settings.image_position == 'right' %}end text-end {%  else %}start{% endif %} justify-center gap-6 ">
      <h2 class="text-[{{ color_scheme.settings.danger }}] font-bold font-barlow text-3xl leading-9">{{ section.settings.title }}</h2>
      {{ section.settings.subtitle }}
    </div>
  </div>
  <div class="transform rotate-180 translate-y-60">
    {% render 'rectangle-bg' %}
  </div>
</div>


{% schema %}
{
  "name": "About Miralou",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "About Miralou"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Ut donec suscipit nunc volutpat faucibus. Ut penatibus etiam diam facilisi at nibh nulla auctor lorem. Accumsan vulputate euismod massa sit egestas. Aliquet a scelerisque enim, arcu rutrum adipiscing fringilla risus. Eget fringilla curabitur sed vulputate pretium, habitasse amet. Elementum odio sagittis, interdum elit ipsum. Volutpat erat ac eu aliquam turpis.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Select whether image is on right or left",
      "options": [
        {
          "value": "left",
          "label": "Image left"
        },
        {
          "value": "right",
          "label": "Image right"
        }
      ],
      "default": "left"
    }
  ]
}
{% endschema %}